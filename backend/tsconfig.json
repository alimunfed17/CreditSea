{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",         
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "isolatedModules": true,     
    "outDir": "dist",
    "rootDir": "src",
    "types": ["node", "jest"]
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["src/**/*", "tests/**/*"]
}
